issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
month = {jul},
pages = {132--154},
title = {{CO2 sequestration in feldspar-rich sandstone: Coupled evolution of fluid chemistry, mineral reaction rates, and hydrogeochemical properties}},
url = {http://www.sciencedirect.com/science/article/pii/S0016703715001957 http://linkinghub.elsevier.com/retrieve/pii/S0016703715001957},
