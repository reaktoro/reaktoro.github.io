@article{Alberty2002b,
  title        = {{Use of legendre transforms in chemical thermodynamics}},
  author       = {Alberty, Robert A},
  year         = 2002,
  month        = {nov},
  journal      = {The Journal of Chemical Thermodynamics},
  volume       = 34,
  number       = 11,
  pages        = {1787--1823},
  doi          = {10.1016/S0021-9614(02)00170-2},
