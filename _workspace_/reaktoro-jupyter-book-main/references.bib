@article{Wang2013c,
  title        = {{Modeling interfacial tension in liquid-liquid systems containing electrolytes}},
  author       = {Wang, Peiming and Anderko, Andrzej},
  year         = 2013,
  journal      = {Industrial and Engineering Chemistry Research},
  volume       = 52,
