@article{Turanyi1993,
  title        = {{On the error of the quasi-steady-state approximation}},
  author       = {Turanyi, T. and Tomlin, A. S. and Pilling, M. J.},
  year         = 1993,
  month        = {jan},
  journal      = {The Journal of Physical Chemistry},
  volume       = 97,
